@model IEnumerable<AllFurnitureViewModel>
@{
    ViewBag.Title = "Мебели";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var a in Model)
    {
        <div class="card col-4" style="width: 20rem; ">
            <div class="card-body">
                <h5 class="card-title mt-1">@a.Name</h5>
                <img class="card-img-top" src=@a.ImageUrl alt="Ad Image">
                <p class="mb-0"><span class="fw-bold">Категория: </span>@a.Category</p>
                <p class="mb-0"><span class="fw-bold">Описание: </span>@a.Description</p>
                <p class="mb-0"><span class="fw-bold">Цена: </span>@a.Price BGN</p>

            </div>

            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Admin" asp-action="EditFurniture" asp-route-id="@a.Id" style="background-color: black; color: #ffffff;" class="btn btn-warning mb-2 w-100 p-3 fw-bold">Edit the Furniture</a>
            }
            else
            {
                <form class="input-group-sm" asp-controller="Admin" asp-action="Cart" asp-route-id="@a.Id">
                    <input type="submit" value="Add to Cart" style="background-color: black; color: #ffffff;" class="fs-6 btn mb-3 w-100 p-3 fw-bold" />
                </form>
            }








        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
